{
	"name": "markflow-svelte",
	"version": "0.0.0",
	"description": "Markdown content processing toolkit, extendable with custom processors and directives",
	"author": "jamhed",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jamhed/markflow.git"
	},
	"keywords": [
		"markdown",
		"svelte",
		"content",
		"processing",
		"git",
		"marked"
	],
	"packageManager": "pnpm@10.18.3",
	"scripts": {
		"build": "npx tsc",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"type": "module",
	"dependencies": {
		"feed": "^5.1.0",
		"globals": "^16.4.0",
		"isomorphic-git": "^1.34.0",
		"js-yaml": "^4.1.0",
		"marked": "^16.4.1",
		"pino": "^10.1.0",
		"publint": "^0.3.15",
		"shiki": "^3.13.0",
		"sitemap": "^8.0.1",
		"svelte": "^5.41.1",
		"svelte-check": "^4.3.3"
	},
	"devDependencies": {
		"@eslint/js": "^9.38.0",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^24.9.0",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.5",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"semantic-release": "^25.0.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2",
		"vite": "^7.1.11"
	}
}
